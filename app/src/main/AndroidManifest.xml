<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="de.nocnoc.clean.flashlight"
          android:versionCode="4"
          android:versionName="0.0.04"
          tools:ignore="GradleOverrides">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22"/>

    <uses-permission
        android:name="android.permission.CAMERA"
        android:description="@string/flashlight_permission_description"
        android:label="@string/flashlight_permission_label"
        android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cleanlight_logo_yelow"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
